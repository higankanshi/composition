                        <Image Source="3.jpg" Stretch="UniformToFill"/>
                        <Image Source="4.jpg" Stretch="UniformToFill"/>
                        <Image Source="5.jpg" Stretch="UniformToFill"/>
                        <Image Source="6.jpg" Stretch="UniformToFill"/>
                        <Image Source="7.jpg" Stretch="UniformToFill"/>
                        <Image Source="8.jpg" Stretch="UniformToFill"/>
                        <Image Source="9.jpg" Stretch="UniformToFill"/>
                        <Image Source="10.jpg" Stretch="UniformToFill"/>
                        <Image Source="11.jpg" Stretch="UniformToFill"/>
                        <Image Source="12.jpg" Stretch="UniformToFill"/>
                        <Image Source="13.jpg" Stretch="UniformToFill"/>
                        <Image Source="14.jpg" Stretch="UniformToFill"/>
                        <Image Source="15.jpg" Stretch="UniformToFill"/>
                        <Image Source="16.jpg" Stretch="UniformToFill"/>
                        <Image Source="17.jpg" Stretch="UniformToFill"/>
                        <Image Source="18.jpg" Stretch="UniformToFill"/>
                        <Image Source="19.jpg" Stretch="UniformToFill"/>
                        <Image Source="20.jpg" Stretch="UniformToFill"/>
                    </GridView.Items>
                </GridView>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</local:SamplePage>
